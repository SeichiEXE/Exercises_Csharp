using System;

namespace Course
{
    class Program
    {
        // variavel da função da soma dos inteiros
        static int Soma(int a, int b)
        {
            int Resultado;
            // Formula de calculo para resultado da soma
            Resultado = a + b;
            return Resultado;
        }

        // variavel da função da subtração dos inteiros
        static int Subtracao(int a, int b)
        {
            // Variavel Resultado a ser declarada
            int Resultado;
            // Formula de calculo para resultado da subtração
            Resultado = a - b;
            return Resultado;
        }

        // variavel da função da multiplicação dos inteiros
        static int Multiplicacao(int a, int b)
        {
            // variavel de resultado a ser declarada
            int Resultado;
            // Formula de calculo para resultado da multiplicação
            Resultado = a * b;
            return Resultado;
        }

        // variavel da função da divisao dos inteiros
        static int Divisao(int a, int b)
        {
            // Variavel de resultado a ser declarada
            int Resultado;
            // Formula de calculo para resultado da divisao
            Resultado = a / b;
            return Resultado;
        }

        static void Main()
        {
            // variaveis "c" e "d" sendo declaradas
            int c, d;

            // Interface de usuario 
            Console.Write("ENTRE COM OS 2 VALORES: ");
            // Valores setados pelo usuario declarados
            c = int.Parse(Console.ReadLine());
            d = int.Parse(Console.ReadLine());

            // Resultado dos valores do usuario
            Console.WriteLine("O resultado da soma é: " + Soma(c, d));
            Console.WriteLine("O resultado da subtração é: " + Subtracao(c, d));
            Console.WriteLine("O resultado da multiplicação é: " + Multiplicacao(c, d));
            Console.WriteLine("O resultado da divisão é: " + Divisao(c, d));
        }
    }
}
